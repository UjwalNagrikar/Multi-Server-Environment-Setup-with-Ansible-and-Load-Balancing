worker_processes 1;
error_log /tmp/nginx_{{ nginx_port }}/logs/error.log;
pid /tmp/nginx_{{ nginx_port }}/nginx.pid;

events {
    worker_connections 1024;
}

http {
    access_log /tmp/nginx_{{ nginx_port }}/logs/access.log;
    
    upstream backend_servers {
        {% for host in groups['webservers'] %}
        server localhost:{{ hostvars[host]['app_port'] }};
        {% endfor %}
    }

    server {
        listen {{ nginx_port }};
        server_name localhost;

        # Load balancer health check
        location /health-lb {
            access_log off;
            return 200 "Load Balancer OK on port {{ nginx_port }}\n";
            add_header Content-Type text/plain;
        }

        # Proxy to backend servers
        location / {
            proxy_pass http://backend_servers;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Backend health monitoring
        location /health {
            proxy_pass http://backend_servers/health;
            access_log off;
        }
    }
}