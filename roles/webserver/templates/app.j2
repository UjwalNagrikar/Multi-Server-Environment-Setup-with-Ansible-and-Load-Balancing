# This is a Jinja2 template for the web application configuration.
# It uses variables defined in the playbook or inventory to customize the application settings.

app_name = "{{ app_name }}"
app_version = "{{ app_version }}"
app_port = "{{ app_port }}"
app_dir = "{{ app_dir }}"

# Flask application configuration
class Config:
    DEBUG = False
    TESTING = False
    SECRET_KEY = '{{ secret_key }}'
    SQLALCHEMY_DATABASE_URI = '{{ database_uri }}'
    SQLALCHEMY_TRACK_MODIFICATIONS = False

# Production configuration
class ProductionConfig(Config):
    pass

# Development configuration
class DevelopmentConfig(Config):
    DEBUG = True

# Choose the configuration based on the environment
config = {
    'production': ProductionConfig,
    'development': DevelopmentConfig
}

# Initialize the application
from flask import Flask
app = Flask(__name__)
app.config.from_object(config['{{ environment }}'])